<nav class="bg-white shadow-sm">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <a href="/" class="text-xl font-bold text-gray-800">Chat-Board</a>
      <div class="flex items-center space-x-4">
        <% if (user) { %>
        <div class="flex items-center space-x-4">
          <div class="text-right">
            <p class="text-sm font-medium text-gray-900">
              <%= user.firstname %> <%= user.lastname %>
            </p>
            <p class="text-xs text-gray-500"><%= user.email %></p>
          </div>
          <a
            href="/logout"
            class="bg-red-500 hover:bg-red-600 text-white text-sm font-medium px-4 py-2 rounded-md transition duration-150 ease-in-out"
            >Logout</a
          >
        </div>
        <% } else { %>
        <a
          href="/login"
          class="bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium px-4 py-2 rounded-md transition duration-150 ease-in-out"
          >Login</a
        >
        <a
          href="/signup"
          class="bg-green-500 hover:bg-green-600 text-white text-sm font-medium px-4 py-2 rounded-md transition duration-150 ease-in-out"
          >Sign Up</a
        >
        <% } %>
        <a
          href="/membership"
          class="bg-purple-500 hover:bg-purple-600 text-white text-sm font-medium px-4 py-2 rounded-md transition duration-150 ease-in-out"
          >Become a Member</a
        >
      </div>
    </div>
  </div>
</nav>
