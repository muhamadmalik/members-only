<header
class="p-4 bg-background text-text border-b border-primary/10 w-full sticky top-0 z-50 transition-all duration-300 ease-in-out"
>
<div class="container mx-auto flex items-center justify-between px-4">
  <div
    class="text-xl font-bold bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent transition-all duration-300 ease-in-out hover:scale-105"
  >
    Advice Board
  </div>
  <nav class="hidden lg:flex items-center gap-6">
    <% if(user) { %>

    <button
      id="toggleAdviceFormDesktop"
      class="px-4 py-2 rounded-md bg-primary text-background font-bold hover:bg-accent transition-all duration-300 ease-in-out hover:scale-105"
    >
      Write Your Advice
    </button>

    <a
      href="/membership"
      class="px-4 text-center py-2 rounded-md bg-primary text-background font-bold hover:bg-accent transition-all duration-300 ease-in-out hover:scale-105"
    >
      Become a Member
    </a>
    <%} else { %>
    <div></div>
    <%}%> <% if (user) { %>
    <a
      href="/logout"
      class="px-4 py-2 rounded-md bg-primary text-background font-bold hover:bg-accent transition-all duration-300 ease-in-out hover:scale-105"
    >
      Log Off
    </a>
    <% } else { %>
    <a
      href="/login"
      class="px-4 py-2 rounded-md bg-primary text-background font-bold hover:bg-accent transition-all duration-300 ease-in-out hover:scale-105"
    >
      Log In
    </a>
    <% } %>
  </nav>
  <button
    id="burgerButton"
    class="lg:hidden text-primary hover:text-accent p-2 transition-all duration-300 ease-in-out hover:scale-110"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"
      />
    </svg>
  </button>
  <div
    id="mobileMenu"
    class="hidden fixed inset-0 bg-background/95 z-40 transition-opacity duration-300 ease-in-out opacity-0"
  >
    <div class="flex flex-col items-center justify-center h-full gap-8">
      <% if(user) { %>
      <button
        id="toggleAdviceFormMobile"
        class="px-4 py-2 rounded-md bg-primary text-background font-bold hover:bg-accent transition-all duration-300 ease-in-out hover:scale-105"
      >
        Write Your Advice
      </button>
      <a
        href="/membership"
        class="px-4 text-center py-2 rounded-md bg-primary text-background font-bold hover:bg-accent transition-all duration-300 ease-in-out hover:scale-105"
      >
        Become a Member
      </a>
      <%} else { %>
      <div></div>
      <%}%> <% if (user) { %>
      <a
        href="/logout"
        class="px-4 py-2 rounded-md bg-primary text-background font-bold hover:bg-accent transition-all duration-300 ease-in-out hover:scale-105"
      >
        Log Off
      </a>
      <% } else { %>
      <a
        href="/login"
        class="px-4 py-2 rounded-md bg-primary text-background font-bold hover:bg-accent transition-all duration-300 ease-in-out hover:scale-105"
      >
        Log In
      </a>
      <% } %>
      <button
        id="closeMobileMenu"
        class="absolute top-4 right-4 text-primary hover:text-accent p-2 transition-all duration-300 ease-in-out hover:scale-110"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
      </button>
    </div>
  </div>
</div>
</header>