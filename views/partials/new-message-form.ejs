<div class="mt-8">
    <button onclick="toggleForm()" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out">
        Add New Message
    </button>
    <div id="messageForm" class="hidden mt-4">
        <form action="/message" method="POST" class="bg-white shadow-md rounded-lg p-6">
            <div class="mb-4">
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Your Message</label>
                <textarea
                    id="message"
                    name="message"
                    rows="4"
                    class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500"
                    placeholder="Type your message here..."
                    required
                ></textarea>
            </div>
            <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out">
                Submit Message
            </button>
        </form>
    </div>
</div>

