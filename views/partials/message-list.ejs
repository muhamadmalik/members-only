<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
    <% if (messages.length > 0) { %>
        <% messages.forEach((msg, index) => { %>
            <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow ">
                <div class="space-y-4">
                    <div class="text-sm text-gray-500 uppercase tracking-wide font-medium">
                        <%= new Date(msg.date).toLocaleString('en-US', { month: 'long', day: 'numeric' }) %>
                    </div>

                    <div class="relative">
                        <svg class="absolute -left-3 -top-3 h-8 w-8 text-gray-200 transform -rotate-180" fill="currentColor" viewBox="0 0 32 32" aria-hidden="true">
                            <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
                        </svg>
                        <p class="text-gray-800 font-medium break-words whitespace-pre-wrap h-full w-full"><%= msg.message %></p>

                    </div>

                    <div class="mt-6 flex items-center space-x-3">
                        <div class="flex-shrink-0">
                            <div class="h-10 w-10 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 flex items-center justify-center">
                                <span class="text-white font-medium text-sm">
                                    <%= msg.name.charAt(0).toUpperCase() %>
                                </span>
                            </div>
                        </div>
                        <div class="flex-1 min-w-0 bottom-0 relative">
                            <p class="text-base font-medium text-gray-900 truncate">
                                <%= msg.name %>
                            </p>
                            <p class="text-sm text-gray-500">
                                <%= new Date(msg.date).toLocaleString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true }) %>
                            </p>
                        </div>
                        <% if (user && user.id === msg.userId) { %>
                            <form action="/message/delete-message/<%= msg.id %>" method="post" class="flex-shrink-0">
                                <input type="hidden" name="messageId" value="<%= msg.id %>">
                                <button 
                                    type="submit"
                                    class="text-gray-400 hover:text-red-500 transition-colors"
                                    aria-label="Delete message"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                    </svg>
                                </button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col-span-full text-center py-12">
            <div class="mx-auto w-24 h-24 rounded-full bg-gray-100 flex items-center justify-center mb-4">
                <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
            </div>
            <p class="text-gray-500 text-lg">No messages to display yet.</p>
            <p class="text-gray-400 text-sm mt-2">Be the first to share your thoughts!</p>
        </div>
    <% } %>
</div>



